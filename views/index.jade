extends layout

block content
  div(class='container')
    div(class='row')
      div(class='col-md-6')
        form(class='form-inline' role='form' ng-submit='createShortUrl()')
          h4= 'Paste your long URL here:'
          div(class='form-group')
            input(type='text' ng-model='formData.url')

          button(type='submit' class='btn btn-primary')= 'Shorten URL'

      div(id='short-url' class='col-md-5' ng-show='token != null')
        div(class='well')
          a(href= "http://c.pl:3000/{{ token }}")= "http://c.pl/{{ token }}"
